# Reach Backend Production Environment Variables
# This file contains all required environment variables for production deployment

# Application Configuration
NODE_ENV=production
PORT=3000
BASE_URL=https://api.reachx.dev

# Database Configuration
DB_URI=mongodb://localhost:27017/reach

# Security Secrets (MUST be set via GitHub Secrets)
CRYPTO_SECRET=
CDN_SECRET_KEY=
UPDATE_SECRET=
BETTER_AUTH_SECRET=

# External Services
DASHBOARD_URL=https://athenas.reachx.dev
POLAR_API_KEY=
POLAR_WEBHOOK_SECRET=
POLAR_ENDPOINT_URI=
RESEND_API_KEY=

# Microsoft OAuth (for Xbox Live authentication)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Process Manager Configuration
# These control the crash detection and restart behavior
MAX_CRASHES_BEFORE_EXIT=3
CRASH_WINDOW_MS=60000
GRACEFUL_SHUTDOWN_TIMEOUT_MS=10000

# Docker Environment Detection
DOCKER_CONTAINER=true

# Logging Configuration
LOG_DIR=./logs
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true
MAX_LOG_SIZE=10485760
MAX_LOG_FILES=30

# File Upload Configuration
MULTER_DIR=/app/cdn

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000